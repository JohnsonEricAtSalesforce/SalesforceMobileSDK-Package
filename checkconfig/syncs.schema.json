{
    "title" : "Syncs configuration schema",
    "description" : "Use this schema to validate usersyncs.json or globalsyncs.json",
    "type": "object",
    "properties": {
        "syncs": {
            "type": "array",
            "items": {
                "title": "Configuration for sync",
                "type": "object",
                "properties": {
                    "syncName": {
                        "title": "Name of sync",
                        "type": "string"
                    },
                    "syncType": {
                        "title": "Type of sync",
                        "type": "string",
                        "enum": ["syncDown", "syncUp"]
                    },
                    "soupName": {
                        "title": "Name of soup",
                        "type": "string"
                    },
                    "target": {
                        "title": "Target of sync",
                        "type": "object"
                    },
                    "options": {
                        "title": "Options of sync",
                        "type": "object",
                        "properties": {
                            "mergeMode": {
                                "type": "string",
                                "enum": ["LEAVE_IF_CHANGED", "OVERWRITE"]
                            }
                        }
                    }
                },
                "required": ["syncName", "soupName", "target", "options"]
            }
        }
    },
    "required": ["syncs"]
}
